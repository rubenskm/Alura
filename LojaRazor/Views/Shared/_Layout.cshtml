<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container-fluid">
				@Html.ActionLink("Loja Razor", "Index", "Home", null, new { @class = "brand" })
				<ul class="nav">
					<li>@Html.ActionLink("Sobre", "About", "Home")</li>
					<li>@Html.ActionLink("Contato", "Contato", "Home")</li>
				</ul>
				<p class="nav pull-right">
					@if (Session["usuarioLogado"] != null)
					{
						@:Bem-Vindo!
						@Session["usuarioLogado"]
						@Html.ActionLink("Logout", "Logout", "Autenticacao")
					}
					else
					{
						@:Olá Visitante!
						@Html.ActionLink("Login", "Login", "Autenticacao")
						@: ou
						@Html.ActionLink("Cadastre-se", "Form", "Usuarios")
					}
				</p>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span3">
				<!-- menu -->
				@Html.Action("Index", "Menu");
			</div>
			<div class="span9">
				@RenderBody()
			</div>
		</div>
	</div>
</body>
</html>