<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Loja" namespace="Loja.Entidades">
	<class name="Usuario">
		<cache usage="nonstrict-read-write" />
		<id name="Id">
			<generator class="identity"/>
		</id>
		<discriminator column="Tipo" type="System.String" />
		
		<property name="Nome"/>

		<subclass name="PessoaFisica">
			<property name="CPF"/>
		</subclass>

		<subclass name="PessoaJuridica">
			<property name="CNPJ"/>
		</subclass>
	</class>
</hibernate-mapping>