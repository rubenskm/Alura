<table class="table table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>Nome</th>
			<th>Descricao</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var categoria in ViewBag.Categorias)
		{
			<tr>
				<th>@categoria.Id</th>
				<th>@categoria.Nome</th>
				<th>@categoria.Descricao</th>
			</tr>
		}
	</tbody>
</table>

